<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.chat_with_experts.ChatWithExperts">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout10"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:background="#FFA903"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/back_chat_with_experts"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/textView95"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_action_navigation_arrow_back_inverted"
                        app:tint="#000000" />

                    <TextView
                        android:id="@+id/textView97"
                        android:layout_width="238dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="3"
                        android:fontFamily="sans-serif"
                        android:gravity="center_vertical"
                        android:text="Chat with experts"
                        android:textColor="#2B2B2B"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:padding="6dp">

                <EditText
                    android:id="@+id/cwe_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/search_tab"
                    android:ems="10"
                    android:hint="Enter Your Name*"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/cwe_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/search_tab"
                    android:ems="10"
                    android:hint="Enter Your Email ID*"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/cwe_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/search_tab"
                    android:ems="10"
                    android:hint="Enter Your Mobile No.*"
                    android:inputType="phone"
                    android:maxEms="10"
                    android:padding="10dp"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView142"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:text="Select Date*" />

                    <TextView
                        android:id="@+id/cwe_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/search_tab"
                        android:drawableLeft="@drawable/ic_calender"
                        android:drawableTint="#838383"
                        android:gravity="center_vertical"
                        android:padding="6dp"
                        android:textColor="#1B1B1B" />

                </LinearLayout>

                <CalendarView
                    android:id="@+id/calendarView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView161"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="What time do you need service ?"
                    android:textSize="18sp" />

                <RadioGroup
                    android:id="@+id/serviceOccur2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:background="#FFFFFF"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/service"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="10:00AM" />

                    <RadioButton
                        android:id="@+id/service4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="01:00PM" />

                    <RadioButton
                        android:id="@+id/service5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="03:00PM" />
                </RadioGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/textView145"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:text="Service Type*" />

                    <Spinner
                        android:id="@+id/spinner_service2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/search_tab" />

                </LinearLayout>

                <EditText
                    android:id="@+id/cwe_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/search_tab"
                    android:ems="10"
                    android:gravity="top"
                    android:hint="Enter Full Address*"
                    android:inputType="textMultiLine"
                    android:lines="7"
                    android:padding="6dp"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/cwe_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/search_tab"
                    android:ems="10"
                    android:gravity="start|top"
                    android:hint="Enter Message*"
                    android:inputType="textMultiLine"
                    android:lines="7"
                    android:padding="6dp"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/cwe_book"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/add_to_cart_button"
                    android:text="Book Appointment" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>