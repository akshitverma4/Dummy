<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ui.settings.Settings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout10"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="#FFA903"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView97"
                    android:layout_width="238dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:gravity="center_vertical"
                    android:text="Settings"
                    android:textColor="#2B2B2B"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/noti_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_arrow_right_white"
            android:drawableTint="#000000"
            android:fontFamily="@font/open_sans_bold"
            android:padding="5dp"
            android:text="Notification  Settings"
            android:textColor="#4C4C4C"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#D8D8D8"
            android:fontFamily="@font/open_sans_bold"
            android:paddingLeft="7dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="General"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/privacyPolicy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:fontFamily="@font/open_sans_bold"
            android:padding="5dp"
            android:text="Privacy Policy"
            android:textColor="#4C4C4C"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/hlpAndSupp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:fontFamily="@font/open_sans_bold"
            android:padding="5dp"
            android:text="Help and support"
            android:textColor="#4C4C4C"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/shareWithFam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:fontFamily="@font/open_sans_bold"
            android:padding="5dp"
            android:text="Share with friends and family"
            android:textColor="#4C4C4C"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/rateStuffy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:fontFamily="@font/open_sans_bold"
            android:padding="5dp"
            android:text="Rate us"
            android:textColor="#4C4C4C"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textView140"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#D8D8D8"
            android:fontFamily="@font/open_sans_bold"
            android:paddingLeft="7dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Accounts"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:fontFamily="@font/open_sans_bold"
            android:padding="5dp"
            android:text="Logout"
            android:textColor="#0FB9FF"
            android:textSize="15sp" />

    </LinearLayout>

</FrameLayout>